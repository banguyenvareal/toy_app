<p id="notice"><%= notice %></p>

<h1>Miccroposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @miccroposts.each do |miccropost| %>
      <tr>
        <td><%= miccropost.content %></td>
        <td><%= miccropost.user_id %></td>
        <td><%= link_to 'Show', miccropost %></td>
        <td><%= link_to 'Edit', edit_miccropost_path(miccropost) %></td>
        <td><%= link_to 'Destroy', miccropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

